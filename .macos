pid=$(ioreg -r -n 'Apple Internal Keyboard / Trackpad' | grep -E 'idProduct' | awk '{ print $4 }')
defaults -currentHost write -g "com.apple.keyboard.modifiermapping.${vid}-${pid}-0" -array-add "
